<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/labelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/firstRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/calculatorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/textValue"
            android:textSize="@dimen/textValueSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelView"
        app:layout_constraintBottom_toTopOf="@+id/secondRow"
        tools:layout_editor_absoluteY="141dp">

        <Button
            android:id="@+id/allClearButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/clear" />

        <Button
            android:id="@+id/percentageButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/percentage" />


        <Button
            android:id="@+id/backSpaceButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/backSpace" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/divide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstRow"
        app:layout_constraintBottom_toTopOf="@+id/thirdRow"
        tools:layout_editor_absoluteY="141dp">

        <Button
            android:id="@+id/sevenButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/seven" />

        <Button
            android:id="@+id/eightButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/eight" />


        <Button
            android:id="@+id/nineButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/nine" />

        <Button
            android:id="@+id/multiplyButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/multiply" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondRow"
        app:layout_constraintBottom_toTopOf="@+id/fourthRow"
        tools:layout_editor_absoluteY="141dp">

        <Button
            android:id="@+id/fourButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/four" />

        <Button
            android:id="@+id/fiveButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/five" />


        <Button
            android:id="@+id/sixButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/six" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdRow"
        app:layout_constraintBottom_toTopOf="@+id/fifthRow"
        tools:layout_editor_absoluteY="141dp">

        <Button
            android:id="@+id/oneButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/one" />

        <Button
            android:id="@+id/twoButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/two" />


        <Button
            android:id="@+id/threeButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/three" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/subtract" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/fourthRow">

        <Button
            android:id="@+id/plusMinusButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/plusMinus" />

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/zero" />


        <Button
            android:id="@+id/decimalButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:textSize="@dimen/buttonTextSize"
            android:text="@string/decimal" />

        <Button
            android:id="@+id/equalButton"
            android:layout_width="@dimen/bw_59"
            android:layout_height="@dimen/bh_79"
            android:layout_marginHorizontal="@dimen/mx_10"
            android:layout_weight="1"
            android:background="@drawable/btn_shaped_round"
            android:fontFamily="@font/fa_solid_900"
            android:text="@string/equal"
            android:textSize="@dimen/buttonTextSize" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>